<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_margin="9dp"
        android:background="@drawable/container_org"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/org_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/org_text"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintTop_toTopOf="@+id/container"
        android:layout_margin="16dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/org_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/org_subtext"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/org_text"
        app:layout_constraintTop_toBottomOf="@+id/org_text"/>

    <TextView
        android:id="@+id/org_tahun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tahun_ajaran"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/container"
        app:layout_constraintBottom_toBottomOf="@id/container" />
</androidx.constraintlayout.widget.ConstraintLayout>